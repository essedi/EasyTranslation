{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/essedieasytranslation/assets/css/translation.css') }}">
{% endblock %}
{% block translation_widget %}
    <div class="easyTranslation">
        {% spaceless %}
            {% set defaultLang = 'es'%}
            {% if form %}
                <div class="form-group">
                    <div class="tab-header">                 
                        <ul class="nav nav-tabs">                    
                            {% for locale, fields in form.vars.value %}
                                <li class="nav-item {{locale == defaultLang ? 'active' : ''}}">
                                    <a class="nav-link {{locale == defaultLang ? 'active' : ''}}" id="{{locale}}-tab" data-toggle="tab" role="tab" aria-controls="{{locale}}" aria-selected="true" href="#{{locale}}">{{locale}}</a>
                                </li>
                            {% endfor %}
                            <li class="nav-item">
                                <a class="nav-link" id="new-tab" data-toggle="tab" role="tab" aria-controls="new" aria-selected="true"  href="#new"><i class="fa fa-plus"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content">                 
                        {% for locale, fields in form.vars.value %}
                            <div class="tab-pane {{locale == defaultLang ? 'active' : ''}}" id="{{locale}}" role="tabpanel" aria-labelledby="{{locale}}-tab">

                                {% for fieldName, fieldValue in fields %}
                                    <div class="form-group">
                                        <label class="form-control-label" for="{{locale}}{{fieldName}}">{{fieldName|trans}}</label>
                                        <div class="form-widget">
                                            <input class="form-group" id="{{locale}}{{fieldName}}" type="text" name="translations[{{locale}}][{{fieldName}}]" value="{{fieldValue}}" class="form-control"/>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endfor %}
                        <div class="tab-pane" id="new" role="tabpanel" aria-labelledby="new-tab">
                            <label for="newlocale">locale</label>
                            {#                        <input id="newlocale" type="text" name="translations[new][locale]" value="" class="form-control"/>#}
                            {{ form_widget(form.newlocale, { 'name': 'translations[new][locale]' }) }}
                            {%   if form.vars.value != null  %}
                                {% for fieldName, fieldValue in form.vars.value[defaultLang] %}
                                    <div class="form-group">
                                        <label class="form-control-label" for="new{{fieldName}}">{{ fieldName | trans}}</label>
                                        <div class="form-widget">
                                            <input class="form-group" id="new{{fieldName}}" type="text" name="translations[new][{{fieldName}}]" value="" class="form-control"/>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                {# just let the choice widget render the select tag #}
                {{ block('choice_widget') }}
            {% endif %}
        {% endspaceless %}
    </div>
{% endblock %}